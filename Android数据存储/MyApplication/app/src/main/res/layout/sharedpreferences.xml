<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xiaoxiaoduan.myapplication.SharedpreferencesActivity">
   <EditText
       android:id="@+id/spEt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="请输入你的姓名"
       />
    <EditText
        android:id="@+id/spEtTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入你的号码"
        />
    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存输入的内容"
        />
    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除输入的内容"
        />
    <Button
        android:id="@+id/btnthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除shared文件"
        />

</LinearLayout>
