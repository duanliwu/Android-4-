<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xiaoxiaoduan.myapplication.FileActivity">
    <EditText
        android:id="@+id/fileedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入需要保存的内容"
        />
    <Button
        android:id="@+id/filebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存入file"
        />
    <Button
        android:id="@+id/filebtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除file保存内容"
        />
    <Button
        android:id="@+id/filebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除file文件"
    />

</LinearLayout>
